{
  "name": "sysml-parser",
  "version": "0.1.1",
  "description": "A TypeScript parser for SysML v2 (Systems Modeling Language version 2.0)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "sysml-parser": "./bin/cli.js"
  },
  "scripts": {
    "build": "npm run langium:generate && tsc",
    "langium:generate": "langium generate",
    "langium:watch": "langium generate --watch",
    "watch": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "bin",
    "src/stdlib/lib"
  ],
  "keywords": [
    "sysml",
    "sysml2",
    "kerml",
    "parser",
    "systems-modeling",
    "mbse",
    "omg"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "langium": "^3.0.0",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "glob": "^10.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "langium-cli": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0"
  }
}
